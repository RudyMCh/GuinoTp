{% extends 'base.html.twig' %}

{% block title %}Salon{% endblock %}

{% block body %}
    <h1>Index des salons</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lobby.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ lobby.createdAt ? lobby.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lobby.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ lobby.city }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ lobby.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ lobby.zipcode }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ lobby.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('lobby_index') }}">Retour liste salons</a>

    <a href="{{ path('lobby_edit', {'id': lobby.id}) }}">Modifier</a>

    {{ include('lobby/_delete_form.html.twig') }}
{% endblock %}
