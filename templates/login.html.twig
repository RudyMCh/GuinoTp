{% extends "base.html.twig" %}
{% block title %}
    Connexion
{% endblock %}
{% block body %}
    
<div class="container">

        {% if success is defined %}
        <p class="msgSuccess">Vous êtes connecté   <i class="fas fa-check"></i></p>
        
        {% else %}
        <form class="form-group col-12 col-lg-4" action="{{ path('login') }} " method="POST">
            <fieldset>
                <label for="phone">Téléphone</label>
                <input class="form-control" type="text" name="phone" placeholder="phone">
                {% if errors.phone is defined %}
                <p class="msgError"><i class="fas fa-exclamation-circle"></i> Téléphone invalide</p>
                {% endif %}
                <label for="password">password</label>
                <input class="form-control" type="password" name="password" placeholder="password">
                {% if errors.password is defined %}
                <p class="msgError"><i class="fas fa-exclamation-circle"></i> Mot de passe invalide</p>
                {% endif %}
                {% if errors.login is defined %}
                <p class="msgError"><i class="fas fa-exclamation-circle"></i> Confirmation invalide</p>
                {% endif %}
            </fieldset>
            <input class="btn btn-primary col-12 col-lg-4 mt-3" type="submit" value="valider">
        </form>
        {% endif %}
</div>
{% endblock  %}